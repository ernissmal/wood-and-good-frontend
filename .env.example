# Frontend Environment Variables Example
# Copy this file to .env.local and fill in your actual values
# These are public variables that get exposed to the browser

# API Configuration
NEXT_PUBLIC_API_URL=https://wood-and-good-cms.smalikisernests.workers.dev

# Sanity CMS (Read-only access)
NEXT_PUBLIC_SANITY_PROJECT_ID=your-sanity-project-id
NEXT_PUBLIC_SANITY_DATASET=production

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://wood-and-good.lv
NEXT_PUBLIC_SITE_NAME="Wood & Good"

# Contact Information
NEXT_PUBLIC_COMPANY_EMAIL=info@wood-and-good.lv  
NEXT_PUBLIC_COMPANY_PHONE=+371-XXXXXXXX
NEXT_PUBLIC_COMPANY_ADDRESS="Your Company Address"

# Development
NEXT_PUBLIC_ENABLE_CART=true
NEXT_PUBLIC_ENABLE_BLOG=true

# Note: Never include sensitive data like API keys or secrets here
# Use server-side environment variables for sensitive data